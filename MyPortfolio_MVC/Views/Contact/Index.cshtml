@model List<MyPortfolio_MVC.Models.TblContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>İletişim Bilgileri</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Telefon</th>
        <th>Email</th>

    </tr>

    @foreach (var item in Model)
    {

        count++;
        <tr>
            <th>@count</th>
            <td>@item.Phone</td>
            <td>@item.Email</td>


            <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }


</table>
<br />
<a href="/Contact/CreateContact" class="btn btn-primary">Yeni İletişim Bilgisi Ekle</a>

