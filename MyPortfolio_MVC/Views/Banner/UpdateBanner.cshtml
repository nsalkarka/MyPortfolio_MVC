@model MyPortfolio_MVC.Models.TblBanner
@{
    ViewBag.Title = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Banner Güncelleme Sayfası</h2>

<br />
<form method="post">
    @Html.HiddenFor(x=>x.BannerId)
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

    <br />
    <button class="btn btn-outline-primary">Kaydet</button>
    <br />
</form>

