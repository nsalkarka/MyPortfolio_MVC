@model List<MyPortfolio_MVC.Models.TblBanner>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Banner Yazısı</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Gösteriliyor mu?</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Anasayfada Göster</th>
        <th>Anasayfada Gizle</th>

    </tr>

    @foreach (var item in Model)
    {

        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.IsShown</td>


            <td><a href="/Banner/DeleteBanner/@item.BannerId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-outline-info">Güncelle</a></td>
            <td><a href="/Banner/ShowBanner/@item.BannerId" class="btn btn-outline-light">Göster</a></td>
            <td><a href="/Banner/HideBanner/@item.BannerId" class="btn btn-outline-warning">Gizle</a></td>
        </tr>
    }


</table>
<br />
<a href="/Banner/CreateBanner" class="btn btn-primary">Yeni Eğitim Ekle</a>

