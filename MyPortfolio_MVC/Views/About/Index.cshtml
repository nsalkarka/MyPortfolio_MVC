@model List<MyPortfolio_MVC.Models.TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Hakkımda Bölümü</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad soyad</th>
        <th>Açıklama</th>
        <th>Fotoğraf</th>
        <th>Cv</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>

            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" style="width:50px;height:50px;" alt="Proje Görseli" /></td>
            <td>@item.CvUrl</td>
            <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-info">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/About/CreateAbout/" class="btn btn-outline-success">Yeni Hakkımda Ekle</a>

